<!--SUCCESS/ERROR HANDLERS-->
{{#if success}}
<div class="alert alert-success">
   <strong >Order status updated!</strong> 
</div>
{{/if}}
<div class="container">
<div class="panel panel-default">
   <div class="panel-heading">
      <h1>Orders</h1>
   </div>
   <div class="panel-body">
   <!--SHOW DELIVERIES OF DRIVER AFTER ONE HAS BEEN SELECTED-->
      {{#if orders}}
      <form role="form" id="order_table" action="/update-delivery" method="POST">
         <div class="form-group">
            <table class="table table-striped">
               <thead class="thead-inverse">
                  <tr>
                     <th>Select</th>
                     <th>Order #</th>
                     <th>Customer Name</th>
                     <th>Delivery Address</th>
                     <th>Delivery Driver</th>
                     <th>Delivery Status</th>
                  </tr>
               </thead>
               <tbody>
                  {{#each orders}}
                  <tr>
                     <th><input type="checkbox" name="id" id="check" value={{this.order_number}} ></th>
                     <th scope="row">{{this.order_number}}</th>
                     <td>{{this.customer}}</td>
                     <td>{{this.delivery_address}}</td>
                     <td>{{this.deliver_person}}</td>
                     <td>{{this.status}}</td>
                  </tr>
                  <input type="hidden" name="driver" value= {{this.deliver_person}}/>
                  {{/each}}
               </tbody>
            </table>
            <div class="btn-group" role="group">
               <button type="submit" name="submit" Value="2" class="btn btn-primary">Delivery(s) Out For Delivery</button>
               <button type="submit" name="submit" Value="3" class="btn btn-primary">Delivery(s) Complete</button>
            </div>
      </form>
      <!--SHOW DRIVERS IF ONE HAS NOT BEEN SELECTED-->
      {{else}}
      <h3>Select driver to display their orders</h3>
      <form role="form" action="/driver-list" method="POST">
      {{#each drivers}}
      <button type="submit" name="employee" Value="{{this.employee_name}}" class="btn btn-primary">{{this.employee_name}}</button>
      {{/each}}
      </form>
      {{/if}}
      </div>
   </div>
</div>